@model MasterDataModels

<!-- Show the cropped image in modal -->
<div class="modal fade docs-cropped" id="modalMasterDataAddEdit" aria-hidden="true" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <form id="frmMasterData" class="form-horizontal form-label-left" novalidate>
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">@Model.columnValueCaption Add/Edit</h4>
                </div>
                <div class="modal-body">
                    <input type="hidden" asp-for="tableName" />
                    <input type="hidden" asp-for="columnId" value="@Model.columnId"/>
                    <input type="hidden" asp-for="columnIdCaption" />
                    <input type="hidden" asp-for="columnIdValue" />
                    <input type="hidden" asp-for="columnValueId" />
                    <input type="hidden" asp-for="columnValueCaption" />
                    
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback item form-group">
                            <input asp-for="columnValue" type="text"
                                   class="form-control has-feedback-left"
                                   placeholder="@Model.columnValueCaption" required="required">
                            <span class="fa fa-users form-control-feedback left" aria-hidden="true"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary btnSave">Save</a>
                </div>
            </div>
        </form>
    </div>
</div><!-- /.modal -->
